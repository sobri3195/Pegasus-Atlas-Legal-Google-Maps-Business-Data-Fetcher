{
  "name": "pegasus-atlas",
  "version": "1.0.0",
  "description": "Automated Business Data Collector & Browser Automation Toolkit",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\""
  },
  "keywords": [
    "automation",
    "web-scraping",
    "data-collection",
    "business-data",
    "electron"
  ],
  "author": "Dr. Muhammad Sobri Maulana, S.Kom, CEH, OSCP, OSCE <muhammadsobrimaulana31@gmail.com> (https://github.com/sobri3195)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sobri3195/pegasus-atlas.git"
  },
  "bugs": {
    "url": "https://github.com/sobri3195/pegasus-atlas/issues"
  },
  "homepage": "https://github.com/sobri3195/pegasus-atlas#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-plugin-electron": "^0.28.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "exceljs": "^4.4.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "lowdb": "^7.0.1",
    "puppeteer": "^21.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
